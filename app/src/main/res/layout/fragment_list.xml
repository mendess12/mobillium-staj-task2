                android:layout_marginBottom="@dimen/margin_16dp"
                android:text="@string/sehir"
                android:textColor="@color/purple_700"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <ImageView
                android:id="@+id/sunnyIVListFragment1"
                android:layout_width="@dimen/margin_64dp"
                android:layout_height="@dimen/margin_64dp"
                android:layout_marginStart="170dp"
                android:layout_marginTop="@dimen/margin_16dp"
                android:layout_marginEnd="@dimen/margin_16dp"
                android:src="@drawable/ic_sunny"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/dereceTVListFragment1"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/gunseliTVListFragment1"
                style="@style/medium_16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="200dp"
                android:layout_marginEnd="@dimen/margin_16dp"
                android:layout_marginBottom="@dimen/margin_16dp"
                android:text="@string/hava_durumu"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/sehirTVListFragment1" />

