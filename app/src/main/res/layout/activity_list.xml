                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16dp"
                android:layout_marginTop="@dimen/margin_16dp"
                android:gravity="center"
                android:text="@string/derece"
                android:textColor="@color/purple_700"
                android:textSize="64sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/dereceAraligiTVListScreen4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/dereceAraligiTVListScreen4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16dp"
                android:layout_marginBottom="@dimen/margin_16dp"
                android:text="@string/derece_araligi"
                app:layout_constraintBottom_toTopOf="@+id/sehirTVListScreen4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dereceTVListScreen4" />

            <TextView
                android:id="@+id/sehirTVListScreen4"
                style="@style/medium_20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16dp"
                android:layout_marginBottom="@dimen/margin_16dp"
                android:text="@string/sakarya"
                android:textColor="@color/purple_700"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/sunnyIVListScreen4"
                android:layout_width="@dimen/margin_64dp"
                android:layout_height="@dimen/margin_64dp"
                android:layout_marginStart="170dp"
                android:layout_marginTop="@dimen/margin_16dp"
                android:layout_marginEnd="@dimen/margin_16dp"
                android:src="@drawable/ic_sunny"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/dereceTVListScreen4"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/gunseliTVListScreen4"
                style="@style/medium_16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="200dp"
                android:layout_marginEnd="@dimen/margin_16dp"
                android:layout_marginBottom="@dimen/margin_16dp"
                android:text="@string/hava_durumu"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
